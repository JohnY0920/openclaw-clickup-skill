# ClickUp Configuration for Agent Squad
# Copy this file to clickup.yaml and fill in your actual values
# DO NOT commit clickup.yaml with real API tokens to git!

api:
  base_url: "https://api.clickup.com/api/v2"
  token: "YOUR_CLICKUP_API_TOKEN_HERE"  # Get from ClickUp Settings â†’ Apps
  rate_limit: 100

# Agent Squad Workspace
team_id: "YOUR_TEAM_ID_HERE"
team_name: "Agent Squad"

# Main List for all agent tasks
list_id: "YOUR_LIST_ID_HERE"
list_name: "Agent Tasks"

# ClickUp URL
workspace_url: "https://app.clickup.com/YOUR_TEAM_ID"
list_url: "https://app.clickup.com/YOUR_TEAM_ID/v/l/li/YOUR_LIST_ID"

# Agent Configuration
agents:
  jojo:
    name: "Jojo"
    role: "planner"
    tags: ["planner", "admin"]
    can_create: true
    can_assign: true
    
  hange:
    name: "Hange"
    role: "research"
    tags: ["research", "intel", "hange"]
    model: "kimi"
    
  levi:
    name: "Levi"
    role: "development"
    tags: ["code", "dev", "levi"]
    model: "claude-sonnet"
    
  armin:
    name: "Armin"
    role: "analysis"
    tags: ["analysis", "strategy", "armin"]
    model: "claude-opus"
    
  erwin:
    name: "Erwin"
    role: "pm"
    tags: ["pm", "coordination", "erwin"]
    model: "gemini"

# Task Workflow
workflow:
  statuses:
    - "to do"
    - "picked up"
    - "in progress"
    - "blocked"
    - "review"
    - "done"
    - "failed"

# Communication Format
communication:
  comment_prefix: "[AGENT:{agent_id}] [TYPE:{type}]"
  message_types:
    STATUS: "Progress update"
    OUTPUT: "Task result/output"
    ERROR: "Error occurred"
    REQUEST: "Need input/decision"
    INFO: "General information"

# Retry Settings
retry:
  max_attempts: 3
  backoff_seconds: 60
